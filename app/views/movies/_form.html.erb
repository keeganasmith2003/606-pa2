<%= form_with(model: movie, html: { style: "max-width:720px;margin:1rem auto;padding:1rem;border:1px solid #e6e6e6;border-radius:8px;background:#fff" }) do |form| %>
  <% if movie.errors.any? %>
    <div style="color:#b00020;background:#fff5f5;border:1px solid #f1c3c3;padding:.75rem 1rem;border-radius:6px;margin-bottom:1rem">
      <h2 style="margin:0 0 .5rem;font-size:1.1rem"><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
      <ul style="margin:0 0 0 1rem;padding:0">
        <% movie.errors.each do |error| %>
          <li style="margin:.15rem 0"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom:.75rem">
    <%= form.label :title, style: "display:block;font-weight:600;margin-bottom:.25rem" %>
    <%= form.text_field :title, style: "width:100%;max-width:480px;padding:.45rem .6rem;border:1px solid #ddd;border-radius:6px" %>
  </div>

  <div style="margin-bottom:.75rem">
    <%= form.label :rating, style: "display:block;font-weight:600;margin-bottom:.25rem" %>
    <%= form.text_field :rating, style: "width:100%;max-width:240px;padding:.45rem .6rem;border:1px solid #ddd;border-radius:6px" %>
  </div>

  <div style="margin-bottom:.75rem">
    <%= form.label :description, style: "display:block;font-weight:600;margin-bottom:.25rem" %>
    <%= form.text_field :description, style: "width:100%;max-width:480px;padding:.45rem .6rem;border:1px solid #ddd;border-radius:6px" %>
  </div>

  <div style="margin-bottom:.75rem">
    <%= form.label :release_date, style: "display:block;font-weight:600;margin-bottom:.25rem" %>
    <%= form.text_field :release_date, style: "width:100%;max-width:240px;padding:.45rem .6rem;border:1px solid #ddd;border-radius:6px" %>
  </div>

  <div style="margin-top:1rem">
    <%= form.submit "Save", style: "padding:.45rem .9rem;border-radius:6px;border:1px solid #2c64d4;background:#2f6fed;color:#fff;cursor:pointer" %>
  </div>
<% end %>
