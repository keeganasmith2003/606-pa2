<p style="color: green"><%= notice %></p>

<div class="page">
  <h1 class="page-title">Movies</h1>

  <table class="movies-table">
    <thead>
      <tr>
        <th class="<%= sort_class(:title) %>"><%= sortable :title, "Title" %></th>
        <th class="<%= sort_class(:rating) %>"><%= sortable :rating, "Rating" %></th>
        <th class="<%= sort_class(:release_date) %>"><%= sortable :release_date, "Release date" %></th>
        <th class="actions-col"></th>
      </tr>
    </thead>

    <tbody id="movies">
      <% @movies.each do |movie| %>
        <tr id="<%= dom_id(movie) %>">
          <td><%= movie.title %></td>
          <td><span class="badge"><%= movie.rating %></span></td>
          <td><%= movie.release_date %></td>
          <td><%= link_to "Show", movie, class: "btn btn-link" %></td>
          <td><%= link_to "Edit", edit_movie_path(movie), class: "btn btn-link" %></td>
          <td><%= link_to "Destroy", movie, class: "btn btn-link" %></td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <td colspan="4"><%= pluralize(@movies.size, "movie") %> total</td>
      </tr>
    </tfoot>
  </table>

  <div class="actions">
    <%= link_to "New movie", new_movie_path, class: "btn btn-primary" %>
  </div>
</div>
